<main>
    <div class="container">
        <div class="errors_explanation">
        <% if @user.errors.any? %>
            <h3><%= @user.errors.count %> prohibited this obj from being saved:</h3>
            <ul>
                <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
            <% end %>
        </div>


        <div class="row">
            <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
                <h2>User info</h2>
                <%= form_with model: @user do |f| %>
                <div class="form-group">
                    <label for="book_user_name">Name</label>
                    <%= f.text_field :name,class:"form-control name" %>
                </div>
                <div class="form-group">
                    <label for="user_image">Image</label>
                    <%= f.file_field :profile_image, accept: "image/*" , class:"form-control-file user_image" ,id: "user_image"%>
                </div>

                <div class="form-group">
                    <label for="introduction">Introduction</label>
                    <%=f.text_area :introduction, class:"form-control introduction" %>
                </div>
                <div class="form-group">
                    <%= f.submit "Update User", class:"btn btn-secondary" %>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</main>