    <%= render "books/new",user: @user, book: @book%>
        <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
          <table class="table">
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                <%= image_tag @user.get_profile_image(100,100) %><br>
                <%= @booka.user.name %>
                <% end %>
              </td>
              <td><%= link_to @booka.title, book_path(@booka.id) %></td>
              <td><%= @booka.body %></td>
              <% if @booka.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@booka.id), class:"btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@booka.id), class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
              <% end %>
            </div>
              
              
            </tr>
          </table>
        </div>
  





    </div>
  </div>
</main>